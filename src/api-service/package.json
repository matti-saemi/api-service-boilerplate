{
  "name": "api-service-boilerplate",
  "version": "1.0.0",
  "description": "A boilerplate for a NodeJs, Typescript, Express API service with tests, OpenAPI definitions and automation script runnning on a docker",
  "main": "index.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "start:dev": "nodemon --watch 'src/**/*.ts' --exec 'ts-node' src/server.ts",
    "lint": "eslint 'src/**/*.ts'",
    "lint:fix": "eslint 'src/**/*.ts' --fix",
    "test": "jest"
  },
  "devDependencies": {
    "@types/cors": "^2.8.14",
    "@types/express": "^4.17.17",
    "@types/express-validator": "^3.0.0",
    "eslint": "^8.48.0",
    "nodemon": "^3.0.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.2.2"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "express-validator": "^7.0.1"
  },
  "author": "Matti Saemi",
  "license": "ISC"
}
